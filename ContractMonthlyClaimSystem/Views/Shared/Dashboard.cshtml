@model List<Claim>
<h2>Lecturer Dashboard</h2>
<table>
    <tr>
        <th>Claim ID</th>
        <th>Hours Worked</th>
        <th>Total Amount</th>
        <th>Status</th>
    </tr>
    @foreach (var claim in Model)
    {
        <tr>
            <td>@claim.ClaimId</td>
            <td>@claim.HoursWorked</td>
            <td>@claim.TotalAmount</td>
            <td>@claim.Status</td>
        </tr>
    }
</table>

<h2>Submit a New Claim</h2>
<form method="post" action="@Url.Action("SubmitClaim", "Lecturer")">
    <fieldset>
        <legend>Lecturer Details</legend>
        <label for="lecturerName">Name:</label>
        <input type="text" id="lecturerName" name="lecturerName" required />
        <br />

        <label for="lecturerSurname">Surname:</label>
        <input type="text" id="lecturerSurname" name="lecturerSurname" required />
        <br />

        <label for="employeeNo">Employee Number:</label>
        <input type="text" id="employeeNo" name="employeeNo" required />
        <br />

        <label for="contactDetails">Contact Details:</label>
        <input type="text" id="contactDetails" name="contactDetails" required />
        <br />
    </fieldset>

    <fieldset>
        <legend>Claim Details</legend>
        <label for="module">Module:</label>
        <input type="text" id="module" name="module" required />
        <br />

        <label for="programme">Programme:</label>
        <input type="text" id="programme" name="programme" required />
        <br />

        <label for="hoursWorked">Number of Hours:</label>
        <input type="number" id="hoursWorked" name="hoursWorked" required />
        <br />

        <label for="hourlyRate">Hourly Rate:</label>
        <input type="number" id="hourlyRate" name="hourlyRate" step="0.01" required />
        <br />
    </fieldset>

    <button type="submit">Submit Claim</button>
</form>
